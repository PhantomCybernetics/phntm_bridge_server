{
  "compilerOptions": {
    "outDir": "./../build",
    "allowJs": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules"]
}
